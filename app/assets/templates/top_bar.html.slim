nav.top-bar data-topbar=true  
  .title-area: .name: h1.leap-logo
    a href="/" leap
  section.top-bar-section
    ul.left
      li.sidebar-toggle-button ng-class="{active: !$root.hideUserBar}"
        a ng-click="toggleUserBar()"
          i.fa.fa-user>
          .on  Show
          .off Hide
      li.divider
      li.sidebar-toggle-button ng-class="{active: !$root.hideTopicBar}"
        a ng-click="toggleTopicBar()"
          i.fa.fa-bars>
          .on  Show
          .off Hide
      li.divider
    ul.right
      li 
        leap-person src="user"
