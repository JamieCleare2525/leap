- hidden||= false
%article{:class => classes_for(event), :style => hidden && 'none'}[event]
  .inner
    %header
      .icon
        = image_tag(event.icon_url, :size => "48x48", :alt => event.title, :title => event.title)
      %time{:datetime => event.event_date.strftime("%Y-%m-%dT%H:%M:%S%z")}
        .date= event.event_date.strftime("%d %b")
        .time= event.event_date.strftime("%H.%M %P")
      %h1= event.title
      - if event.subtitle
        %h2= raw event.subtitle
    .body= raw event.body
