%h6= link_to_if @user.staff? && !Settings.ebs_course_base_url.blank?, person_course.course.title, (Settings.ebs_course_base_url + person_course.course.mis_id)
.status= person_course.status.humanize
.details
  - if person_course.start_date
    %b Start Date:
    = person_course.start_date.strftime("%d %B %Y")
    %br
  - if person_course.end_date
    %b End-date:
    = person_course.end_date.strftime("%d %B %Y")
