- unless request.xhr?
  %header#event_header= render :partial => "header"
- if @events.empty?
  #events
    %br{:style => "clear:both"}
    %h1 You don't have any events, yet!
- else
  #events= render @events
  #more_events_div= link_to raw("&darr; Load more events &darr;"), person_events_url(@topic,:date => @bottom_date), :remote => true, :id => "more_events"
