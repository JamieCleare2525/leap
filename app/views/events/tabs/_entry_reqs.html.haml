- person_course.app_siblings.each do |app|
  .span10
    %h4= "#{app.title} (#{app.code})"
    - if app.entry_reqs
      %table.table
        - app.entry_reqs.each do |er|
          %tr
            %td= er.category
            %td= er.body
            - if @user.staff?
              %td.right
                .pull-right
                  = create_event_form EntryReqMet do |f|
                    = f.hidden_field :met
                    = link_to "#", :class => "btn btn-success btn-mini", :id => "entry_req_met" do
                      %i.icon-ok.icon-white
                      Yes
                  = create_event_form EntryReqMet do |f|
                    = link_to "#", :class => "btn btn-warning btn-mini", :id => "entry_req_not_met" do
                      %i.icon-ok-circle.icon-white
                      No, but...
