#targets.block.left
  .icon
    %h4 Due Targets
    = link_to image_tag("target_home.png"), person_view_url(@topic,View.find_by_name("targets"))
  .content
    .scroll_list
      - if @targets.empty?
        %b You have no targets, yet.
      - else
        %table
          %tr
            %th Due
            %th Target
          - @targets.each do |target|
            %tr{:class => target.status, :title => target[:body]}
              %td= pretty_date target.target_date
              %td= link_to truncate(target[:body], :length => 27), person_view_url(@topic, View.find_by_name("targets"), :anchor => dom_id(target.events.last))
