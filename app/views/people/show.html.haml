#personal_details.person_home_full_block
  %h3 Personal Details
  %dl
    %dt Name:
    %dd= @topic.name
    %dt Birth Date:
    %dd= @topic.date_of_birth.strftime("%d %B %Y")
    %dt Address:
    %dd= (@topic.address + [@topic.town,@topic.postcode]).reject{|x|x.blank?}.join(", ")
    %dt Mobile:
    %dd= @topic.mobile_number or "-"
    %dt Next of Kin:
    %dd= @topic.next_of_kin or "-"
#your_thoughts.person_home_full_block
  %h3 What's on your mind?
.person_home_container
  .person_home_small_block
    %h3 Next lesson
    - if @next_timetable_event
      .timetable_start= @next_timetable_event.start.strftime('%H.%M')
      .timetable_title= @next_timetable_event.title
      .timetable_room= @next_timetable_event.rooms.join ", "
      .timetable_desc 
        %p cheese making for dummies
    - else 
      %p you have no current timetable events
