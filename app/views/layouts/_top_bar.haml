.navbar.navbar-fixed-top
  .navbar-inner
    .container
      = link_to image_tag("icons/leap-logo.png"), search_people_url, :class => "brand"
      = form_tag search_people_url, :method => :get, :class => "navbar-search pull-left" do
        = text_field_tag :q, params[:q], :class => "search-query has-popover", :placeholder => "Search...", "data-title" => "Searching.", "data-placement" => "bottom", "data-content" => "Search by all or part of a learner's name, person code, course title or course code", "data-delay" => 500
      %ul.nav.pull-left
        - if controller.controller_name == "views"
          %li.has-popover{"data-title" => "Show Everyone.", 
                          "data-content" => "Change event timeline to show all learners at the institution", 
                          "data-placement" => "bottom", "data-delay" => 500}
            = link_to "Everyone", {:all => true, :date => @date}
        - if @topic
          %li= link_to "Refresh", :refresh => true
      %ul.nav.pull-right
        %li.dropdown
          %a{:href => "#", :class => "dropdown-toggle", "data-toggle" => "dropdown"} 
            Admin
            %b.caret 
          %ul.dropdown-menu
            %li= link_to "Settings", admin_settings_url
        %li.divider-vertical
        %li= link_to @user.name, @user
    -#help_button{:title => "Help for this page"}
      = image_tag "actions/help.png"
