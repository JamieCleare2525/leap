.inner
  #nav_logo
    =link_to image_tag("icons/leap-logo.png"), search_people_url
  - form_tag search_people_url, :method => :get, :id=> "search_form" do
    /*=link_to image_tag("icons/search.png", :class => "icon"), search_people_url*/
    = text_field_tag :q, params[:q]
    = submit_tag "Search", :class => "search", :id => "top_nav_search"
  #multi-view
    - if controller.controller_name == "views"
      = link_to :class => "search", :all => true do
        .block_border
          .block
            .left
              = image_tag "icons/multi.png"
            .right
              Everyone
    - else
      &nbsp;
  #notice= Settings.top_bar_notice
  #login_name
    .left
      = image_tag("#{url_for(@user)}.jpg")
    .right
      = link_to @user.forename, person_url(@user)
      %br
      = link_to @user.surname, person_url(@user)
