.person-photo= image_tag(@topic.photo_uri, :size => "130x130")
%h1= @topic.name
%h6= link_to_if @affiliation == "staff", @topic.mis_code, Settings.ebs_person_base_url + @topic.mis_id.to_s
%ul.sidebar
  = icon_link @user.staff? ? "#{@topic.class.name.humanize} Home" : "Home", @topic, "home"
  = icon_link "Timetable", send("#{@topic.class.name.underscore}_timetables_url", @topic)
  - if @affiliation == "staff" and !Settings.ebs_person_base_url.blank?
    = icon_link Settings.ebs_link_name, Settings.ebs_person_base_url + @topic.mis_id.to_s, "sparke"
%h3 Events
%ul= render @views
