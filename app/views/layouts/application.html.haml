!!!
%html
  %head
    - if @topic
      %title= "#{@topic.name} : Leap"
    - else
      %title Leap
    = stylesheet_link_tag 'screen.css', :media => 'screen, projection'
    = stylesheet_link_tag 'print.css', :media => 'print'
    /[if lt IE 8]
      = stylesheet_link_tag 'ie.css', :media => 'screen, projection'
    /[if lt IE 9]
      = stylesheet_link_tag 'ie8.css', :media => 'screen, projection'
      = javascript_include_tag 'html5.js'
    = javascript_include_tag :defaults
    = javascript_include_tag "events.js"
    = javascript_include_tag "home.js"
    = csrf_meta_tag
    - unless Settings.google_analytics_code.empty?
      :javascript
        var _gaq = _gaq || [];
        _gaq.push(['_setAccount', '#{Settings.google_analytics_code}']);
        _gaq.push(['_trackPageview']);
        (function() {
          var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
          ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
          var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
        })();
  %body
    - if @affiliation == "staff"
      #top_bar= render :partial => "layouts/top_bar"
    .container#main_container
      #side_pane
        - if params[:all]
          = render :partial => "layouts/all_sidebar"
        - else
          = render :partial => "layouts/#{@topic.class.name.underscore}_sidebar" if @topic
      #main_pane
        = yield
      #footer= render :partial => "layouts/footer"
      - if flash[:notice]
        %h2#flash_notice= flash[:notice]
      - if @affiliation == "affiliate"
        .hovery= image_tag "parent_mode.png"
