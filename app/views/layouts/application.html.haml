!!!
%html
  %head
    - if @topic
      %title= "#{@topic.name} : Leap"
    - else
      %title Leap
    = favicon_link_tag
    = favicon_link_tag "mobile_icon.png", :rel => "apple-touch-icon", :type => "image/png"
    = stylesheet_link_tag 'screen', :media => 'screen, projection'
    = stylesheet_link_tag 'print', :media => 'print'
    /[if lt IE 8]
      = stylesheet_link_tag 'ie', :media => 'screen, projection'
    /[if lt IE 9]
      = stylesheet_link_tag 'ie8', :media => 'screen, projection'
    = javascript_include_tag "application"
    = csrf_meta_tag
    - unless Settings.google_analytics_code.empty?
      = render :partial => "layouts/ganalytics"
  %body
    - if @affiliation == "staff"
      #top_bar= render :partial => "layouts/top_bar"
    .container#main_container
      #side_pane
        - if params[:all] and @affiliation == "staff"
          = render :partial => "layouts/all_sidebar"
        - else
          = render :partial => "layouts/#{@topic.class.name.underscore}_sidebar" if @topic
      #main_pane
        = yield
      #footer= render :partial => "layouts/footer"
      - if flash[:notice]
        %h2#flash_notice= flash[:notice]
      - if @affiliation == "affiliate"
        .hovery= image_tag "parent_mode.png"
