!!!
%html
  %head
    %title ilp2
    = stylesheet_link_tag 'screen.css', :media => 'screen, projection'
    = stylesheet_link_tag 'print.css', :media => 'print'
    /[if lt IE 8]
      = stylesheet_link_tag 'ie.css', :media => 'screen, projection'
    /[if lt IE 9]
      = javascript_include_tag 'html5.js'
    = javascript_include_tag :defaults
    = javascript_include_tag "events.js"
    = csrf_meta_tag
  %body
    .container#main_container
      #side_pane= render :partial => "layouts/person_sidebar" if @topic
      #main_pane= yield
      #footer
        %h3 Params
        = debug(params)
        %h3 Session
        = debug(session.to_yaml)
        %h3 Topic
        = debug(@topic.to_yaml)
