= form_for(review_line, :url => event, :remote => true, :method => :put, :html => {:class => "event_update_form"}) do |f|
  = hidden_field_tag :event_id, event.id
  = hidden_field_tag :eventable_type, "ReviewLine"
  = hidden_field_tag :person_id, @topic.mis_id
  .review_scores
    = f.text_field :unit
    %table
      %tr
        %td Quality
        %td= f.select :quality, Settings.review_grades.split(",")
        %td Punctuality
        %td= f.select :punctuality, Settings.review_grades.split(",")
      %tr
        %td Attitude
        %td= f.select :attitude, Settings.review_grades.split(",")
        %td Completion
        %td= f.select :completion, Settings.review_grades.split(",")
  = f.text_area :body, :style => "height: 100px"
  .review_controls
    = submit_tag "Save"
