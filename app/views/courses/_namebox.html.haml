.panel.panel-default
  .panel-body
    .row
      .text-left.col-xs-12
        %h4= topic.name
        %h4
          %small
            = topic.code
            &ndash;
            = topic.year
        - if @topic.person_courses.detect{|pu| !pu.tutorgroup.blank?}
          %button.btn.btn-xs.dropdown-toggle{"data-toggle" => "dropdown", :class => @tutorgroup ? "btn-primary" : "btn-default"}
            = @tutorgroup or "All Groups"
            %span.caret
          %ul.dropdown-menu
            %li= link_to "All Groups", {:tutorgroup => nil}
            %li.divider
            - @topic.tutorgroups.each do |tg|
              %li= link_to tg, {:tutorgroup => tg}
